<%= provide(:title, "Edit Pass") %>
<%= form_for(@user, url: passwordreset_path(params[:id])) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= hidden_field_tag :email, @user.email %>
<%= f.label :password %>
<%= f.password_field :passwprd, class: 'form-control' %>
<br/>
<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation, class: 'form-control' %>
<%= f.submit "Update Password", class: 'btn btn-info' %>
