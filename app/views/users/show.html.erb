<% provide(:title, "Show")%>
<div class="row">
  <aside class="way2 col-md-4">
    <section class="user_info">
      <h1 class="alin">
       <%= gravatar_for(@user) %>
       <%= "#{@user.name}" %>
      </h1>
<br/>
<% if current_user?(@user) then %>
<%= "#{@user.email}" %>
<%= link_to 'Edit', edit_user_path, class: 'btn btn-warning'%>
<% end %>
<br/>
<pre>
Created : <%= time_ago_in_words(@user.created_at) %>
<p>
</section>
<br/>
<br/>
<section>
	<%= render 'follow_form' if logged_in? %>
</section>
<section class="follow-border">
  <%= render 'shared/stats' %>
</section>
</pre>
</aside>
  <div class="way col-md-8">
    <% if @user.microposts.any? then %>
      <h3>Microposts (<%=  @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render("micro_posts/micro_posts") %>
      </ol>
      <%= will_paginate(@microposts) %>
    <% end %>
  </div>
<br/>
<br/>
</div>